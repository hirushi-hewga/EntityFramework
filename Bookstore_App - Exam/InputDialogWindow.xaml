<Window x:Class="Bookstore_App___Exam.InputDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bookstore_App___Exam"
        mc:Ignorable="d"
        Title="InputDialogWindow" Height="150" Width="300">
    <Grid>
        <StackPanel Width="auto" HorizontalAlignment="Center">
            <Label Content="Ім'я автора:" HorizontalAlignment="Left" FontWeight="Bold"/>
            <TextBox x:Name="FirstNameTextBox" Width="200"/>
            <Label Content="Прізвище автора:" HorizontalAlignment="Left" FontWeight="Bold"/>
            <TextBox x:Name="LastNameTextBox" Width="200" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10">
            <Button Content="OK" Width="75" Click="OkButton_Click" />
            <Button Content="Скасувати" Width="75" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
